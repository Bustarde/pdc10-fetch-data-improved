<!doctype html>
<html>
    <head>
        <!-- CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
        <title>Fetch Data from MongoDB Improved</title>
    </head>
    
    <body>
        <div class = "container">
            <h1 style = "padding-bottom: 20px;">Fetch Data from MongoDB Improved</h1>
            <div class = "row">
                <div class = "col-10">
                 <a href="add.php" class="btn btn-primary float-end">Add Student</a>
                    <table class = "table table-bordered table-striped">
                        <tr>
                            <th scope="col">Student ID</th>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Birthdate</th>
                            <th scope="col">Address</th>
                            <th scope="col">Program</th>
                            <th scope="col">Contact Number</th>
                            <th scope="col">Emergency Contact</th>
                            <th scope="col">Actions</th>
                        </tr>
                        {{#data}}
                        <tr>
                            <th scope="row">{{studentId}}</th>
                            <td>{{firstName}}</td>
                            <td>{{lastName}}</td>
                            <td>{{birthdate}}</td>
                            <td>{{address}}</td>
                            <td>{{program}}</td>
                            <td>{{contactNumber}}</td>
                            <td>{{emergencyContact}}</td>
                            <td>
                                <a href="edit.php?id={{_id}}" class="btn btn-success btn-sm" name="edit">Edit</a>
                                <a href = "delete.php?id={{_id}}" onclick="return confirm('Are you sure you want to delete this record?');" class="btn btn-danger btn-sm" name="delete">Delete</a>
                            </td>
                        </tr>
                        {{/data}}
                    </table>
                </div>
            </div>
        </div>
    </body>
</html>