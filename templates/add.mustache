                        <label class="form-label" style="color:white">Last Name</label>
                        <input type="text" name="lastName" class="form-control border border-primary">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" style="color:white">Birthdate</label>
                        <input type="text" name="birthdate" class="form-control border border-primary">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" style="color:white">Address</label>
                        <input type="text" name="address" class="form-control border border-primary">
                    </div>
                        <div class="mb-3">
                        <label class="form-label" style="color:white">Program</label>
                        <input type="text" name="program" class="form-control border border-primary">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" style="color:white">Emergency Contact</label>
                        <input type="text" name="emergencyContact" class="form-control border border-primary">
                    </div>

